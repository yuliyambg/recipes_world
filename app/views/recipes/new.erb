<h1>Create a Recipe</h1>
<p><%= @error %></p>
<form action="/recipes" method="post">
  <label>Title</label>
<input class="form-control form-control-sm" type="text" name="title">
  <label>Preparation</label>
<!--  <input type="text" name="preparation">-->
  <textarea class="form-control form-control-sm" name="preparation"></textarea>
  <label>Image URL</label>
  <input class="form-control form-control-sm" type="text" name="image">
  <label>Category</label>
<!--  <input type="text" name="category">-->

  <select class="form-control form-control-sm" name="category">
    <option value=" "> </option>
    <option value="meatlovers">Meatlovers</option>
    <option value="vegeterian">Vegeterian</option>
    <option value="vegan">Vegan</option>
  </select><br>

  <Button class="btn btn-primary" type="submit">Add Recipe</button>
</form>